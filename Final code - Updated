  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,1);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  }
  
  else if ( x == 18 )
  {
  digitalWrite(relay1,1);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,1);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  }
  
  else if ( x == 19 )
  {
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,1);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,1);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  }
  
  else if ( x == 20 )
  {
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,1);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,1);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  delay(500);
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  } 
  }

  else 
  {
  digitalWrite(relay1,0);
  digitalWrite(relay2,0);
  digitalWrite(relay3,0);
  digitalWrite(relay4,0);
  digitalWrite(relay5,0);
  digitalWrite(relay6,0);
  }
  
  if (digitalRead(button4)==0 && lastreading==1 )
  {
    Serial.println("Low");
    lastreading=0;
    x++;
    j=0;
  }
  
  if (j==0)
  {
  j=1;
  if ( x == 1 )
  {  
  lcd.setCursor(0,0);
  lcd.print("   1 ROUND 1    ");
  lcd.setCursor(0, 1);
  lcd.print(" STAND 1 TRAP A ");
  }
  
  else if ( x == 2 )
  {
  lcd.setCursor(0,0);
  lcd.print("   2 ROUND 1    ");
  lcd.setCursor(0, 1);
  lcd.print(" STAND 2 TRAP B ");
  }
  
  else if ( x == 3 )
  {
  lcd.setCursor(0,0);
  lcd.print("   3 ROUND 1    ");
  lcd.setCursor(0, 1);
  lcd.print(" STAND 3 TRAP C ");
  }
  
  else if ( x == 4 )
  {
  lcd.setCursor(0,0);
  lcd.print("   4 ROUND 1    ");
  lcd.setCursor(0, 1);
  lcd.print(" STAND 4 TRAP D ");
  }
  
  else if ( x == 5 )
  {
  lcd.setCursor(0,0);
  lcd.print("   5 ROUND 1    ");
  lcd.setCursor(0, 1);
  lcd.print(" STAND 5 TRAP E ");
  }
  
  else if ( x == 6 )
  {
  lcd.setCursor(0,0);
  lcd.print("6 ROUND 2 STAND ");
  lcd.setCursor(0, 1);
  lcd.print("1 TRAPS E THEN f");
  }
  
  else if ( x == 7 )
  {
  lcd.setCursor(0,0);
  lcd.print("7 ROUND 2 STAND ");
  lcd.setCursor(0, 1);
  lcd.print("1 TRAPS e THEN F");
  }
  
  else if ( x == 8 )
  {
  lcd.setCursor(0,0);
  lcd.print("8 ROUND 2 STAND ");
  lcd.setCursor(0, 1);
  lcd.print("2 TRAPS F THEN d");
  }
  
  else if ( x == 9 )
  {
  lcd.setCursor(0,0);
  lcd.print("9 ROUND 2 STAND ");
